{
  "name": "ds_2-2rnn-cv",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    }
  },
  "augmentations": {
    "wave": [],
    "spectrogram": []
  },
  "arch": {
    "type": "BaselineASRModer",
    "args": {
      "n_cnn_layers": 3,
      "n_rnn_layers": 2,
      "rnn_dim": 512,
      "n_feats": 128,
      "dropout": 0.15
    }
  },
  "data": {
    "train": {
      "batch_size": 200,
      "num_workers": 1,
      "datasets": [
        {
          "type": "CommonVoiceDataset",
          "args": {
            "part": "train",
            "max_audio_length": 10.0,
            "max_text_length": 120
          }
        }
      ]
    },
    "val": {
      "batch_size": 200,
      "num_workers": 1,
      "datasets": [
        {
          "type": "CommonVoiceDataset",
          "args": {
            "part": "validation",
            "max_audio_length": 10.0,
            "max_text_length": 120,
            "data_dir": "common_voice_en"
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 5e-4,
      "weight_decay": 0,
      "amsgrad": true
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 100,
      "epochs": 500,
      "anneal_strategy": "cos",
      "max_lr": 3e-4,
      "pct_start": 0.05
    }
  },
  "trainer": {
    "epochs": 500,
    "save_dir": "/mnt/ramdisk/tensorboard/",
    "save_period": 20,
    "verbosity": 2,
    "monitor": "min val_loss",
    "tensorboard": true,
    "len_epoch": 100,
    "grad_norm_clip": 10
  }
}