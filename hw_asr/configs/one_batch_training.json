{
  "name": "one_batch_training_ds2",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    }
  },
  "augmentations": {
    "wave": [],
    "spectrogram": []
  },
  "arch": {
    "type": "BaselineASRModer",
    "args": {
      "n_feats": 128,
      "n_cnn_layers": 5,
      "n_rnn_layers": 3,
      "rnn_dim": 512
    }
  },
  "data": {
    "train": {
      "batch_size": 40,
      "num_workers": 1,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-360",
            "max_audio_length": 20.0,
            "max_text_length": 120,
            "limit": 40
          }
        }
      ]
    },
    "val": {
      "batch_size": 10,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "max_audio_length": 20.0,
            "max_text_length": 120,
            "limit": 40
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 5e-4,
      "weight_decay": 0,
      "amsgrad": true
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 100,
      "epochs": 20,
      "anneal_strategy": "cos",
      "max_lr": 3e-2,
      "pct_start": 0.1,
      "div_factor": 1000
    }
  },
  "trainer": {
    "epochs": 20,
    "save_dir": "saved/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 10000,
    "tensorboard": true,
    "len_epoch": 100,
    "grad_norm_clip": 10
  }
}
