{
  "name": "one_run",
  "n_gpu": 0,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    }
  },
  "augmentations": {
    "wave": [],
    "spectrogram": []
  },
  "arch": {
    "type": "BaselineASRModer",
    "args": {
      "n_cnn_layers": 3,
      "n_rnn_layers": 1,
      "rnn_dim": 512,
      "n_feats": 128,
      "dropout": 0.3
    }
  },
  "data": {
    "train": {
      "batch_size": 100,
      "num_workers": 1,
      "datasets": [
        {
          "type": "CustomDirAudioDataset",
          "args": {
            "audio_dir": "data_sync/custom/audio",
            "transcription_dir": "data_sync/custom/transcriptions"
          }
        }
      ]
    },
    "val": {
      "batch_size": 100,
      "datasets": [
        {
          "type": "CustomDirAudioDataset",
          "args": {
            "audio_dir": "data_sync/custom/audio",
            "transcription_dir": "data_sync/custom/transcriptions"
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 5e-10,
      "weight_decay": 0,
      "amsgrad": true
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 10,
      "epochs": 10,
      "anneal_strategy": "cos",
      "max_lr": 6e-4,
      "pct_start": 0.1
    }
  },
  "trainer": {
    "epochs": 1000,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "tensorboard": true,
    "len_epoch": 5,
    "grad_norm_clip": 10
  }
}