{
  "name": "ds2-libri",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    }
  },
  "augmentations": {
    "wave": [],
    "spectrogram": []
  },
  "arch": {
    "type": "BaselineASRModer",
    "args": {
      "n_cnn_layers": 5,
      "n_rnn_layers": 3,
      "rnn_dim": 512,
      "n_feats": 128,
      "dropout": 0.1
    }
  },
  "data": {
    "train": {
      "batch_size": 70,
      "num_workers": 1,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train_all",
            "max_audio_length": 25.0,
            "max_text_length": 250
          }
        }
      ]
    },
    "val": {
      "batch_size": 100,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-clean",
            "max_audio_length": 25.0,
            "max_text_length": 250
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 3e-4
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 200,
      "epochs": 500,
      "anneal_strategy": "cos",
      "max_lr": 3e-4,
      "pct_start": 0.01,
      "div_factor": 100000
    }
  },
  "trainer": {
    "epochs": 500,
    "save_dir": "./saved",
    "save_period": 200,
    "verbosity": 2,
    "monitor": "min val_loss",
    "tensorboard": true,
    "len_epoch": 100,
    "grad_norm_clip": 10
  }
}